<div class="modal fade" id="modal-item" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="modal-item" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                {{#if description}}
                    <h5 class="modal-title">Edit Item</h5>
                {{else}}
                    <h5 class="modal-title">Add Item</h5>
                {{/if}}
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form-add-item">
                    <div class="mb-3">
                        <label for="description">Description</label>
                        {{#if description}}
                            <input type="text" id="description" class="form-control" value="{{description}}" />
                        {{else}}
                            <input type="text" id="description" class="form-control" />
                        {{/if}}
                    </div>
                    <div class="mb-3">
                        <label for="quantity">Quantity</label>
                        {{#if quantity}}
                            <input type="number" id="quantity" class="form-control" value="{{quantity}}" />
                        {{else}}
                            <input type="number" id="quantity" class="form-control" />
                        {{/if}}
                    </div>
                    <div class="mb-3">
                        <label for="expiration-date">Expiration Date</label>
                        {{#if expirationDate}}
                            <input type="date" id="expiration-date" class="form-control" value="{{expirationDate}}" />
                        {{else}}
                            <input type="date" id="expiration-date" class="form-control" />
                        {{/if}}
                    </div>
                    <div class="mb-3">
                        <label for="bin-location">Bin Location</label>
                        <select id="bin-location" class="form-select"></select>
                    </div>
                    {{#if itemId}}
                        <input type="hidden" id="itemId" value="{{itemId}}" />
                    {{/if}}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" id="btn-save-item">Save</button>
            </div>
        </div>
    </div>
</div>